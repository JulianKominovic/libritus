{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Libritus",
  "version": "0.1.0",
  "identifier": "dev.jkominovic.libritus-dev",
  "build": {
    "beforeDevCommand": "bun run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "bun run build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "Libritus",
        "width": 1200,
        "height": 800,
        "titleBarStyle": "Overlay",
        "decorations": true,
        "trafficLightPosition": {
          "x": 19,
          "y": 24
        },
        "hiddenTitle": true,
        "dragDropEnabled": false
      }
    ],
    "security": {
      "csp": null,
      "assetProtocol": {
        "enable": true,
        "scope": [
          "$APPDATA",
          "$APPLOCALDATA",
          "$APPDATA/*",
          "$APPLOCALDATA/*"
        ]
      }
    }
  },
  "bundle": {
    "active": true,
    "targets": [
      "app",
      "appimage",
      "dmg"
    ],
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
